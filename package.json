{
  "name": "parcel-template",
  "version": "1.0.0",
  "license": "MIT",
  "source": "src/index.html",
  "scripts": {
    "recreate-dist": "rm -Rf dist",
    "stylelint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "stylelint \"**/*.scss\" --fix",
    "dev": "npm run recreate-dist && parcel -p 3000 --open chrome",
    "build": "npm run recreate-dist && parcel build",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\""
  },
  "dependencies": {
  },
  "browserslist": [
    "last 2 version",
    "> 0.5%",
    "ie >= 11"
  ],
  "devDependencies": {
    "@parcel/transformer-sass": "^2.9.3",
    "@types/node": "^17.0.31",
    "parcel": "^2.9.3",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^3.0.1",
    "stylelint": "^15.10.2",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.0.1"
  }
}
